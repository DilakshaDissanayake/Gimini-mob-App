<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/topic"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="70dp"
        android:layout_marginEnd="70dp"
        android:layout_marginTop="20dp"
        android:textAlignment="center"
        android:textSize="40sp"
        android:textStyle="bold"
        android:fontFamily="sans-serif-black"
        android:text="Gimini AI"
        tools:ignore="HardcodedText" />

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/inputLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginTop="20dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_below="@+id/topic">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/editText"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:gravity="top|start"
            android:hint="Type Here"
            android:inputType="textMultiLine"
            android:maxLines="10"
            android:minLines="5"
            android:textColorHint="#546E7A"
            android:textSize="16sp"
            tools:ignore="HardcodedText,TextContrastCheck,VisualLintTextFieldSize" />
    </com.google.android.material.textfield.TextInputLayout>

    <Button
        android:id="@+id/btnGen"
        android:layout_width="wrap_content"
        android:layout_height="70dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentStart="true"
        android:layout_below="@id/inputLayout"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="90dp"
        android:layout_marginStart="90dp"
        android:backgroundTint="#0093D5"
        android:text="Generate"
        android:textSize="20sp"
        tools:ignore="HardcodedText,VisualLintButtonSize" />



    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/textShowLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginTop="50dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_below="@+id/btnGen">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/textShow"
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:textSize="19sp"
            android:clickable="false"
            android:focusable="false"
            android:gravity="top|start"
            android:inputType="none"
            android:longClickable="true"
            android:maxLines="10"
            android:minLines="5"
            android:textIsSelectable="true"
            tools:ignore="HardcodedText,SpeakableTextPresentCheck,VisualLintTextFieldSize" />

    </com.google.android.material.textfield.TextInputLayout>




</RelativeLayout>